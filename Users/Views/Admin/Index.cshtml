@model IEnumerable<AppUser>
@{ 
    Layout = "_Layout";
}
<div class="bg-primary m-1 p-1 text-white"><h4>User Accounts</h4></div>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<table class="table table-sm table-bordered">
    <tr><th>ID</th><th>Name</th><th>Email</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr>
    }
    else
    {
        foreach (AppUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <a asp-action="Edite" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                        <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Create</a>
<a class="btn btn-primary" asp-controller="RoleAdmin" asp-action="Index">RoleAdmin</a>